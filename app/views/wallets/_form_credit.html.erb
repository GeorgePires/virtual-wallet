<%= form_with(url: create_credit_user_wallet_path, class: "contents") do |form| %>
  <div class="my-5">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", required: :true %>
  </div>

  <div class="inline">
    <%= form.submit 'Credit Wallet', class: "rounded-lg py-3 px-5 bg-purple-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
